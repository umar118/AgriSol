<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="340dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/Green_Apple"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_profile"
        android:layout_width="200dp"
        android:layout_margin="2dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/Green_Apple"
        />
    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Milk_White"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:gravity="start|center"
    android:layout_margin="3dp"
    android:layout_gravity="start|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/email_address__"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/s"
        android:layout_margin="3dp"
        android:textColor="@color/Green_Apple"
        android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="start|center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/mobile_number_"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/s"
                android:layout_margin="3dp"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                 />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start|center"
                android:layout_margin="2dp"
                android:gravity="start|center"
                android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/qualification"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:text="@string/s"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
               />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/city_"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/s"
                android:layout_margin="3dp"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:layout_weight="1"
                android:layout_margin="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/province_state"
                android:layout_margin="3dp"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
               />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_gravity="start|center"
                android:gravity="start|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/country"
                android:layout_margin="3dp"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="3dp"
                android:text="@string/expertise"
                android:textColor="@color/Green_Apple"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_expertise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_gravity="start|center"
                android:layout_margin="3dp"
                android:layout_marginLeft="30dp"
                android:gravity="start|center"
               />

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>